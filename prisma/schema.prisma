generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Term {
  id             String    @id @default(cuid())
  title          String
  content        String?
  example_conent String?
  tldr           String?
  studies        Studies[]
  image          String?   @db.Text
  published      Boolean   @default(false)
  sponsor        Boolean   @default(false)
  source         Source?   @relation(fields: [sourceId], references: [id])
  sourceId       String?
  language       Language? @relation(fields: [languageId], references: [id])
  languageId     String?
  Tag            Tag?      @relation(fields: [tagId], references: [id])
  tagId          String?
  audioUrlTerm String?
  audioUrlContent String?
  audioUrlTldr String?
}

model Tag {
  id        String     @id @default(cuid())
  title     String
  content   String?
  image     String?    @db.Text
  published Boolean    @default(false)
  terms     Term[]
  languages Language[]
}

model Source {
  id        String  @id @default(cuid())
  title     String
  content   String?
  href      String?
  image     String? @db.Text
  published Boolean @default(false)
  terms     Term[]
}

model Language {
  id        String  @id @default(cuid())
  title     String
  i18n      String?
  image     String? @db.Text
  published Boolean @default(false)
  terms     Term[]
  Tag       Tag?    @relation(fields: [tagId], references: [id])
  tagId     String?
}

model Studies {
  id      Int     @id @default(autoincrement())
  title   String
  content String
  Term    Term?   @relation(fields: [termId], references: [id])
  termId  String?
}
